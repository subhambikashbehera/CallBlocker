<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="numberdata"
            type="com.subhamassignment.callblocker.dataBaseHandle.NumberModel_table" />

    </data>

    <LinearLayout
        android:layout_margin="2dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="15sp"
                android:textColor="@color/black"
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@{numberdata.name}" />

            <TextView
                android:textColor="#F80000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Blocked" />

            <TextView
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:id="@+id/number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                tools:text="@{numberdata.number}" />

            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_weight="1"
                    android:autoSizeTextType="uniform"
                    android:id="@+id/statsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@{numberdata.timescalled}" />
                <TextView
                    android:layout_weight="1"
                    android:autoSizeTextType="uniform"
                    android:id="@+id/stats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@{numberdata.calltime}" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end|center_vertical">

            <ImageButton
                android:layout_gravity="center_vertical"
                android:background="#00000000"
                android:id="@+id/EditButton"
                android:layout_width="40dp"
                android:scaleType="centerCrop"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_baseline_more_vert_24"
                tools:ignore="VectorDrawableCompat"
                app:tint="@color/black" />

        </LinearLayout>

    </LinearLayout>
</layout>